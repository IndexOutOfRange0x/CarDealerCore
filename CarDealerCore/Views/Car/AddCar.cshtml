@model Car
@{
    ViewData["Title"] = "Добавить автомобиль";
}

<div class="about-section">
        <h1>@ViewData["Title"]</h1>
        <p>Добавить новый автомобиль в каталог.</p>
    </div>

<div class="form-group mt-3" style="max-width: 400px">
    <form asp-controller="Car" asp-action="AddCar" method="post" >
        <div class="form-group">
            <input type="text" class="form-control" asp-for="VIN" placeholder="VIN-номер" />
            <span asp-validation-for="VIN" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Mark" placeholder="Марка" />
            <span asp-validation-for="Mark" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Model" placeholder="Модель" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Description" placeholder="Описание" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="number" class="form-control" asp-for="Price" placeholder="Цена" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>
</div>
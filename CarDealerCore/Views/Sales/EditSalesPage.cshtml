@model CarDealerCore.Models.Sale
@{
    Layout = "/Views/Layout.cshtml";
}

<link rel="stylesheet" href="~/css/field.css" />

<div id="login-form">
    <h1>EDIT SALE</h1>
    <fieldset>
        <form asp-action="EditSale" asp-controller="Sales" asp-route-id="@Model.Id">
            <div class="form-group">
                <label asp-for="UserId" class="control-label">UserId</label>
                <input type="text" asp-for="UserId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label">CarId</label>
                <input type="text" asp-for="CarId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Date_Sold" class="control-label">Date_Sold</label>
                <input type="date" asp-for="Date_Sold" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <input type="text" asp-for="Status" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-default" />
            </div>
        </form>
    </fieldset>
</div>

@model CarDealerCore.Models.Car
@{
    Layout = "/Views/Layout.cshtml";
}

<link rel="stylesheet" href="~/css/field.css" />
<link rel="stylesheet" href="~/css/table.css" />

<div>
    <table class="table_dark">
        <tr>
            <td>VIN</td>
            <td>Mark</td>
            <td>Model</td>
            <td>Delete</td>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.VIN)
            </td>
            <td>@Html.DisplayFor(model => model.Mark)</td>
            <td>@Html.DisplayFor(model => model.Model)</td>
            <td>
                <div>
                    <form asp-controller="Cars" asp-action="DeleteCar" method="post">
                        <div class="form-group">
                            <input type="submit" class="btn btn-default" value="Удалить" />
                        </div>
                    </form>
                </div>
            </td>
        </tr>
    </table>
</div>
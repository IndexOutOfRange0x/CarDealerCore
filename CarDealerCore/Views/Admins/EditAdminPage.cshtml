@model CarDealerCore.Models.Admin
@{
    Layout = "/Views/Layout.cshtml";
}

<link rel="stylesheet" href="~/css/field.css" />
<div id="login-form">
    <h1>EDIT ADMIN</h1>
    <fieldset>
        <form asp-action="EditAdmin" asp-controller="Admins" asp-route-id="@Model.Id">
            <div class="form-group">
                <label asp-for="Login" class="control-label">Login</label>
                <input type="text" asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input type="text" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </fieldset>
</div>
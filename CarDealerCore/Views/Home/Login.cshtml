@{
    ViewData["Title"] = "Вход";
}

<div class="my-5">
    <form class="mx-auto" style="max-width: 330px;">
        <h1 class="h3 mb-3 font-weight-normal">Войдите, пожалуйста</h1>
        <label for="inputEmail" class="sr-only">Логин</label>
        <input type="text" id="inputEmail" class="form-control my-3" placeholder="Логин" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control my-3" placeholder="Пароль" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    </form>
</div>

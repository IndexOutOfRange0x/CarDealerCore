@model IEnumerable<CarDealerCore.Models.User>
@{
    Layout = "/Views/Layout.cshtml";
}

<link rel="stylesheet" href="~/css/table.css" />
<table class="table_dark">
    <tr>
        <td>ID</td>
        <td>Login</td>
        <td>Password</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Login</td>
            <td>@item.Password</td>
            <td><a asp-area="" asp-controller="Users" asp-action="EditUserPage" asp-route-id="@item.Id">Edit</a></td>
            <td><a asp-area="" asp-controller="Users" asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a></td>
        </tr>
    }
</table>
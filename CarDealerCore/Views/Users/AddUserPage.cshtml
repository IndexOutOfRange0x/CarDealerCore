@model CarDealerCore.Models.User
@{
    Layout = "/Views/Layout.cshtml";
}

<link rel="stylesheet" href="~/css/field.css" />

<div id="login-form">
    <h1>ADD USER</h1>
    <fieldset>
        <form asp-action="AddUser" asp-controller="Users">
            <div class="form-group">
                <label asp-for="Login" class="control-label">Имя</label>
                <input type="text" asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Возраст</label>
                <input type="text" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-default" />
            </div>
        </form>
    </fieldset>
</div>